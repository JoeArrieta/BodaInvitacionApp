@{
    Layout = "_Layout";
}
@model BodaInvitacionApp.Models.Confirmacion

<div class="espacio-header-agradecimiento">
    <h2>Confirmación de Asistencia</h2>

    <form asp-action="ConfirmarAsistencia" method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="Telefono" class="form-label"></label>
            <input asp-for="Telefono" class="form-control" />
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NumeroDePersonas" class="form-label"></label>
            <input asp-for="NumeroDePersonas" type="number" class="form-control" min="0" max="@Model.NumeroDePersonas" />
            <span asp-validation-for="NumeroDePersonas" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Mensaje" class="form-label"></label>
            <textarea asp-for="Mensaje" class="form-control"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Confirmar Asistencia</button>


    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
